<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PhoText">

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation"/>
    <ImageView
            android:layout_width="353dp"
            android:layout_height="345dp" app:srcCompat="@color/colorPrimary"
            tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="16dp" android:id="@+id/imageView"
            android:background="@color/colorAccent"/>
    <Button
            android:text="Copy Both"
            android:layout_width="wrap_content"
            android:layout_height="56dp" tools:layout_editor_absoluteY="384dp"
            tools:layout_editor_absoluteX="142dp" android:id="@+id/buttonAll"/>
    <Button
            android:text="Copy Numbers"
            android:layout_width="98dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="384dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/buttonNum"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="56dp" tools:layout_editor_absoluteY="384dp"
            tools:layout_editor_absoluteX="269dp" android:id="@+id/buttonText" android:text="Copy Text"/>

</android.support.constraint.ConstraintLayout>